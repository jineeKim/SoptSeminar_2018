<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="16dp"
        tools:context=".MyPageActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="56dp">

            <LinearLayout
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                        android:src="@drawable/ic_arrow_back_48_px"
                        android:layout_width="48dp"
                        android:layout_height="48dp"/>

                <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="32dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:letterSpacing="-0.01"
                        tools:text="내 정보"/>
            </LinearLayout>

            <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dp"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_notice_48_px"
                    android:layout_width="48dp"
                    android:layout_height="48dp"/>

        </RelativeLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_marginBottom="18dp"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <RelativeLayout
                    android:layout_marginRight="16dp"
                    android:layout_width="106dp"
                    android:layout_height="106dp">
                <ImageView
                        android:src="@drawable/ic_profile_106_px"
                        android:layout_width="106dp"
                        android:layout_height="106dp"/>
                <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/button_camera_32_px"
                        android:layout_width="32dp"
                        android:layout_height="32dp"/>
            </RelativeLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="#000000"
                            android:letterSpacing="-0.01"
                            tools:text="차차"/>

                    <ImageView
                            android:layout_marginLeft="4dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_setting_20_px"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>
                </LinearLayout>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="#9e9e9e"
                        android:letterSpacing="-0.01"
                        tools:text="차지윤 / chacha"
                />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="#9e9e9e"
                        android:letterSpacing="-0.01"
                        tools:text="숙명여대 14학번"
                />

                <LinearLayout
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:layout_marginRight="8dp"
                            android:src="@drawable/button_verify"
                            android:layout_width="76dp"
                            android:layout_height="36dp"/>
                    <ImageView
                            android:src="@drawable/button_logout"
                            android:layout_width="76dp"
                            android:layout_height="36dp"/>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="76dp">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                <ImageView
                        android:src="@drawable/ic_list_24_px"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#9e9e9e"
                        android:letterSpacing="-0.01"
                        tools:text="내가 쓴 글"
                />
            </LinearLayout>


            <LinearLayout
                    android:layout_marginLeft="16dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                <ImageView
                        android:src="@drawable/ic_reply_24_px"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#9e9e9e"
                        android:letterSpacing="-0.01"
                        tools:text="댓글 단 글"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_marginLeft="16dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                <ImageView
                        android:src="@drawable/ic_star_24_px"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#9e9e9e"
                        android:letterSpacing="-0.01"
                        tools:text="스크랩랩"
                />
            </LinearLayout>

        </LinearLayout>
        <ImageView
                android:background="#eeeeee"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp">
            <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:letterSpacing="-0.01"
                    tools:text="알림 설정"
            />
        </RelativeLayout>

        <ImageView
                android:background="#eeeeee"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp">
            <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:letterSpacing="-0.01"
                    tools:text="쪽지 설정"
            />
        </RelativeLayout>

        <ImageView
                android:background="#eeeeee"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp">
            <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:letterSpacing="-0.01"
                    tools:text="암호 잠금"
            />
        </RelativeLayout>

        <ImageView
                android:background="#eeeeee"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp">
            <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:letterSpacing="-0.01"
                    tools:text="앱 정보"
            />
        </RelativeLayout>

        <ImageView
                android:background="#eeeeee"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp">
            <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:letterSpacing="-0.01"
                    tools:text="정보 동의 설정"
            />
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>