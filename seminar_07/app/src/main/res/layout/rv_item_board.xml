<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/btn_rv_item_detailed_board"
        android:layout_width="match_parent"
        android:layout_height="380dp">
    <ImageView
            android:id="@+id/iv_rv_item_board_image"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"/>
    <RelativeLayout
            android:layout_marginHorizontal="16dp"
            android:layout_below="@+id/iv_rv_item_board_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/tv_rv_item_board_like"
                        android:text="하트"
                        android:textColor="#000"
                        android:layout_marginRight="16dp"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/tv_rv_item_board_like_cnt"
                        android:text="53"
                        android:textSize="18sp"
                        android:layout_marginLeft="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                    android:id="@+id/tv_rv_item_board_content"
                    android:text="내용"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tv_rv_item_board_reply"
                    android:text="댓글"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>